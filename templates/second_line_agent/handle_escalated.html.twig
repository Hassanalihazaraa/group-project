{% extends 'base.html.twig' %}

{% block title %}Hello second agent!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <a href="{{ path('second_line_agent') }}">Back to homepage</a>
    <h2>handle one of these escalated tickets </h2>

    <h5> Title : {{ ticket.title }}</h5>
    <p>Content : {{ ticket.message }}</p>
    <p>Customer : {{ user.firstName }} {{ user.lastName }}</p>
    <p>E-mail : {{ user.email }}</p>
    <p>Time : {{ ticket.creationTime |date("d/m/y") }}</p>

    <form action="#" method="post">
        <label for="comment">Answer to customer: </label><br>
        <textarea name="comment" id="comment" cols="30" rows="10"></textarea>
        <input type="submit" value="Add comment" name="add_comment">
    </form>

    <h2>Reactions: </h2>
    {% for comment in comments %}
        <p>{{ comment.comments }}</p>
    {% else %}
        <p>No comments on this ticket yet</p>
    {% endfor %}







{% endblock %}
