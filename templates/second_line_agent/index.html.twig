{% extends 'base.html.twig' %}

{% block title %}Hello SecondLineAgentController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <a href="{{ path('personal_escalated_tickets') }}">check which escalated tickets you have</a>
    <h2>escalated tickets</h2>

    <table>
        <tr>
            <th>Ticket title</th>
            <th>Creation Time</th>
            <th>Action</th>
        </tr>
        {% for ticket in tickets %}
            <tr>
                <td>{{ ticket.title }}</td>
                <td>{{ ticket.creationTime|date() }}</td>
                <td><a href="{{ path('handle_escalated_ticket', {id: ticket.id}) }}">handle</a></td>
            </tr>

        {% endfor %}
    </table>
{% endblock %}
